@namespace LumexUI.Docs.Client.Components

<LumexButton Size="@Size.Small"
             Color="@ThemeColor.None"
             Variant="@Variant.Light"
             OnClick="@ToggleThemeAsync"
             Class="w-6 h-6 min-w-6 min-h-6 p-0 gap-0 text-foreground-400 dark:text-foreground-500 hover:text-foreground-600">
    <LumexIcon Icon="@(_isDarkMode ? Icons.Rounded.LightMode : Icons.Rounded.DarkMode)" />
</LumexButton>

@code {
    [Inject] private ThemeService ThemeService { get; set; } = default!;

    private bool _isDarkMode;

    private async Task ToggleThemeAsync()
    {
        _isDarkMode = await ThemeService.ToggleAsync();
    }
}
